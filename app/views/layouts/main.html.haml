!!! XML
!!! Strict
%html
  %head
    %title= "Cybele"
    = favicon_link_tag 'favicon.ico'
    = javascript_tag("var locale='#{get_locale}';")
    = stylesheet_link_tag "application"
    = javascript_tag("var i18n_scope = 'js.adminjs';")
  %body
    = yield :main_content
 
    = javascript_include_tag "admin.js/application"
    = yield :js_links if content_for?(:js_links)

